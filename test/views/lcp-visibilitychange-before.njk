{% extends 'layout.njk' %}

{% block content %}
  <section style="display: none">
    <h1>LCP Test</h1>
    <p>
      <img src="/test/img/square.png" alt="Square">
    </p>
    <p>Text below the image</p>
  </section>

  <script type="module">
    import {getLCP} from '/dist/web-vitals.js';

    // Call `getLCP()` when the document is visible,
    // but change to hidden before the first paint.
    const getLCPPromise = getLCP();

    Promise.resolve().then(() => {
      Object.defineProperty(document, 'visibilityState', {value: 'hidden'});
      document.dispatchEvent(new Event('visibilitychange'));

      document.querySelector('section').style.display = 'block';
    });

    getLCPPromise.then((result) => {
      // Log for easier manual testing.
      console.log(result);

      // Elements can't be serialized, so we convert first.
      const lcp = {
        value: result.value,
        entries: result.entries.map((e) => ({
          element: e.element.nodeName.toLowerCase(),
          size: e.size,
          startTime: e.startTime,
        })),
      };

      // Test sending the results to an analytics endpoint.
      navigator.sendBeacon(`/collect`, JSON.stringify({lcp}));
    });
  </script>
{% endblock %}
